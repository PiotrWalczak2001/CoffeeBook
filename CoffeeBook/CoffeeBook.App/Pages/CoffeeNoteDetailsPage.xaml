<Page x:Class="CoffeeBook.App.Pages.CoffeeNoteDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CoffeeBook.App.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CoffeeNoteDetailsPage">



    <StackPanel Margin="20" HorizontalAlignment="Left" VerticalAlignment="Center">
        <TextBlock FontSize="30" Margin="0 0 0 5" Text="{Binding NoteDetailsName, StringFormat='Nazwa: {0}', Mode=TwoWay}"/>
        <TextBlock FontSize="16" Margin="0 0 0 5" Text="{Binding NoteDetailsBrewingType, StringFormat='Typ parzenia: {0}', Mode=TwoWay}" />
        <TextBlock Margin="0 0 0 3" Text="Opis" HorizontalAlignment="Center" FontSize="24"/>
        <TextBlock Margin="0 0 0 10" FontSize="18" TextWrapping="Wrap" Text="{Binding NoteDetailsDescription, Mode=TwoWay}" />
        <TextBlock FontSize="16" Text="{Binding NoteDetailsBrewedDate,StringFormat='Data parzenia: {0}', Mode=TwoWay}" />
    </StackPanel>

</Page>
